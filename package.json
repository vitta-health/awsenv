{
  "name": "@vitta-health/awsenv",
  "version": "1.2.4",
  "description": "Secure way to handle environment variables in Docker with AWS Parameter Store",
  "main": "./index.js",
  "type": "module",
  "bin": {
    "awsenv": "./index.js"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/developers-vitta/awsenv.git"
  },
  "author": "Gilson F. B. Souza <gilsonfernandesbatista@gmail.com> (https://github.com/gilsonsouzah)",
  "contributors": [
    "Filipe Forattini <filipeforattini1@gmail.com> (https://github.com/filipeforattini/)"
  ],
  "bugs": {
    "url": "https://github.com/developers-vitta/awsenv/issues"
  },
  "scripts": {
    "build": "node scripts/build.js",
    "build:dist": "node scripts/build.js dist",
    "build:binaries": "node scripts/build.js binaries",
    "build:clean": "node scripts/build.js clean",
    "build:bundle": "node scripts/build-bundle.js",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "dev": "node src/index.js",
    "clean": "rm -rf coverage dist releases"
  },
  "packageManager": "pnpm@10.14.0",
  "vitest": {
    "include": [
      "tests/**/*.test.js"
    ],
    "coverage": {
      "provider": "v8",
      "reporter": [
        "text",
        "html",
        "clover",
        "json"
      ],
      "include": [
        "src/**/*.js"
      ],
      "exclude": [
        "tests/**/*.test.js",
        "tests/**/*.spec.js"
      ],
      "thresholds": {
        "statements": 60,
        "branches": 75,
        "functions": 70,
        "lines": 60
      }
    }
  },
  "pkg": {
    "scripts": [
      "index-cjs.js",
      "index.js",
      "src/**/*.js"
    ],
    "assets": [
      "package.json",
      "index.js",
      "src/**/*.js"
    ],
    "targets": [
      "node18-linux-x64",
      "node18-linux-arm64",
      "node18-macos-x64",
      "node18-macos-arm64",
      "node18-win-x64"
    ],
    "outputPath": "releases"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "esbuild": "^0.25.9",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@aws-sdk/client-ssm": "^3.864.0",
    "args": "^5.0.3",
    "p-limit": "^6.2.0"
  },
  "keywords": [
    "aws",
    "env",
    "awsenv",
    "ssm",
    "docker"
  ]
}
